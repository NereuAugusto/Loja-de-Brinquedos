<div class="modal fade" tabindex="-1" id="modalProduto">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Descrição</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<h2 id="tituloProduto"></h2>
				<p class="text-center"><img alt="Foto do produto" id="imagemProduto" width="300" /></p>
				<p id="precoProduto"></p>
				<p id="descricaoProduto"></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Comprar</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	let produtos = <%- JSON.stringify(produtos) %>;

	function mostrarProduto(indice) {
		let tituloProduto = document.getElementById("tituloProduto");
		let imagemProduto = document.getElementById("imagemProduto");
		let precoProduto = document.getElementById("precoProduto");
		let descricaoProduto = document.getElementById("descricaoProduto");

		let produto = produtos[indice];

		tituloProduto.textContent = produto.nome;
		imagemProduto.src = "/public/img/produtos/brinquedo" + produto.id + ".jpeg";
		precoProduto.textContent = "R$ " + produto.preco;
		descricaoProduto.textContent = produto.descricao;

		$('#modalProduto').modal();
	}
</script>