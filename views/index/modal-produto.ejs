<div class="modal fade" tabindex="-1" id="modalProduto">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Descri√ßao</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<h2 id="tituloProduto"></h2>
				<p id="precoProduto"></p>
				<p id="descricaoProduto"></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Comprar</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	let produtos = <%- JSON.stringify(produtos) %>;

	function mostrarProduto(indice) {
		let tituloProduto = document.getElementById("tituloProduto");
		let precoProduto = document.getElementById("precoProduto");
		let descricaoProduto = document.getElementById("descricaoProduto");

		tituloProduto.textContent = produtos[indice].nome;
		precoProduto.textContent = "R$ " + produtos[indice].preco;
		descricaoProduto.textContent = produtos[indice].descricao;

		$('#modalProduto').modal();
	}
</script>